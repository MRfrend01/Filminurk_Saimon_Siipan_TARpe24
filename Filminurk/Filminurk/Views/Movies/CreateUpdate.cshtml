@model Filminurk.Models.Movies.MoviesDeleteViewModel
@{
    ViewData["Title"] = "loo film";
}
<h1 class="text-danger">loo film</h1>
<h3 class="text-warning">Kas olete kindel, et soovite luua järgmise filmi?</h3>
<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Pealkiri
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Žanr
        </dt>
        <dt class="col-sm-2">
            Režissöör
        </dt>
        <dd class="col-sm-10">
            @Model.Director
        </dd>
        <dt class="col-sm-2">
            Aasta
        </dt>
        <dt class="col-sm-2">
            Kestvus
        </dt>
        <dd class="col-sm-10">
            @Model.DurationInMinutes minutit
        </dd>
        <dt class="col-sm-2">
            Hind
        </dt>
    </dl>
    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Loo" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Tagasi filmide nimekirja</a>
    </form>
